<h1 class="text-center pt-5 ">Listing all articles</h1>

  <% @articles.each do |article| %>
    <div class="container card bg-light p-4 mb-4">
      <div class="article-title">
        <%= link_to article.title, article_path(article) %>
      </div>
      <div class="article-body">
        <%= truncate(article.text, length:100) %>
      </div>
      <div class="article-actions">
        <%= link_to 'Edit article', edit_article_path(article), class:"btn btn-xs btn-primary" %>
        <%= link_to 'Delete article', article_path(article), method: :delete,
                                      data: {confirm: "Are You sure? you want to delete article?"},
                                      class: "btn btn-xs btn-danger" %>
      </div>
    </div>
  <% end %>
